{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "paths": { "@/*": ["src/*"] },

    "verbatimModuleSyntax": true,
    "noUnusedParameters": false,
    "noImplicitOverride": true,
    "moduleResolution": "Node",

    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,

    "noUnusedLocals": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "module": "ESNext",
    "target": "ESNext",
    "types": ["Node"],

    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,

    "baseUrl": ".",
    "strict": true,
    "noEmit": true
  },

  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],

  "exclude": [
    "node_modules",
    "typings",
    "public",
    "build",
    "dist"
  ]
}
